{{#if authManager.isAuthenticated}}
Logged in as {{authManager.currentUser.email}}
{{/if}}
<div class="col-md-12">
  <div>
    <div class="col-md-12 ">

      {{#paper-toolbar}}
      <div class="md-toolbar-tools">
        {{#link-to  'dashboard.orders'}}
        {{#paper-button}}
        Orders
        {{/paper-button}}
        {{/link-to}}

        {{#link-to  'dashboard.orders.order'}}
        {{#paper-button}}
        Order
        {{/paper-button}}
        {{/link-to}}

        {{#link-to  'dashboard.orders.new'}}
        {{#paper-button}}
        New Order
        {{/paper-button}}
        {{/link-to}}

        <div class="text-right">
          {{#paper-menu  position="target-right target" as |menu|}}
          {{#paper-button target=menu action="toggleMenu" icon-button=true}}
          {{paper-icon class="md-menu-origin" icon="account-circle"}}
          {{/paper-button}}
          {{else}}
          {{#paper-menu-item  width=4}}
          <p style="width: 190px;">Preference</p>
          {{paper-icon icon="settings" class="md-menu-align-target"}}
          {{/paper-menu-item}}
          {{#paper-menu-item action="logout" width=4}}
          <p style="width: 190px;">Logout</p>
          {{paper-icon icon="power-settings-new" class="md-menu-align-target"}}
          {{/paper-menu-item}}
          {{/paper-menu}}
        </div>
      </div>

      {{/paper-toolbar}}



    </div>


    <div class="tab-content col-md-12">
      {{outlet}}
    </div>
  </div>
</div>
